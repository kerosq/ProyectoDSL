private String getTipoDatoReturn(tipodato dato){
		String c = dato.ToString().ToLower();
		


			if(c.CompareTo("void")==0) {	
			return "";
		}

				if(c.CompareTo("int")==0) {	
			return "return 0;";
		}

				if(c.CompareTo("string")==0) {	
			return "return null;";
		}
	return "return null;";
	}


	private String getTipoDato(tipodato dato){
		String c = dato.ToString().ToLower();
		


			if(c.CompareTo("void")==0) {	
			return "";
		}

				if(c.CompareTo("int")==0) {	
			return "int";
		}

				if(c.CompareTo("string")==0) {	
			return "String";
		}
	return "return null;";

	}
